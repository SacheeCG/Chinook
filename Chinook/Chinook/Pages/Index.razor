@page "/"
@attribute [Authorize]
@inject HomeService HomeService

@using Chinook.Models
@using Chinook.Services;
@using Microsoft.EntityFrameworkCore

<PageTitle>Index</PageTitle>

   
<h1>Artists</h1>

@if (Artists == null)
{
    <Loading />
}
else
{
    <input @bind="SearchTerm" placeholder="Search by artist name" />
    <button @onclick="Search">Search</button>
    <table class="table table-striped table-hover table-sm">
        <thead>
            <tr>
                <th>Name</th>
                <th>Number of albums</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var artist in FilteredArtists)
            {
                <tr>
                    <td><a href="Artist/@artist.ArtistId">@artist.Name</a></td>
                    <td>@artist.Albums.Count()</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Artist> Artists;
    private List<Artist> FilteredArtists;
   

    private string SearchTerm;

    protected override async Task OnInitializedAsync() {
        await InvokeAsync(StateHasChanged);
        Artists = await HomeService.GetArtists();
        FilteredArtists = Artists;
    }

    private void Search()
    {
        if (!string.IsNullOrWhiteSpace(SearchTerm))
        {
            FilteredArtists = Artists.Where(artist => artist.Name.ToLower().Contains(SearchTerm.ToLower())).ToList();
        }
        else
        {
            FilteredArtists = Artists;
        }
    }
    
}
